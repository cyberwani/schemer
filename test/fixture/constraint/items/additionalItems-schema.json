{
    "schema": {
        "items": [
            {
                "type": "string"
            }
        ],
        "additionalItems": {
            "type": "integer"
        }
    },

    "tests": {
        "valid array": {
            "value": ["foo", 111, 222],
            "expected": []
        },

        "valid non-array": {
            "value": "foo",
            "expected": []
        },

        "invalid": {
            "value": ["foo", 111, "bar", null],
            "expected": [
                "Validation failed for value at \"/2\": The value must be of type \"integer\".",
                "Validation failed for value at \"/3\": The value must be of type \"integer\"."
            ]
        }
    }
}
